{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lintstaged": "eslint --ext .js,.ts . --fix",
    "dev": "ts-node -r dotenv/config src/main/runMock.ts",
    "serve": "npm run build && nodemon --watch functions --exec 'firebase emulators:start'",
    "deploy": "firebase deploy --only functions",
    "kill": "npx kill-port 4400, 4000, 4500, 9199, 5000, 9099, 8080"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "config": "^3.3.9",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "firebase": "^9.21.0",
    "firebase-admin": "^11.7.0",
    "firebase-functions": "^4.4.1",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/node": "^20.3.1",
    "@types/validator": "^13.7.17",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.39.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "firebase-functions-test": "^3.0.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "private": true
}